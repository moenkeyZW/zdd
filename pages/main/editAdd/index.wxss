/* pages/editAdd/index.wxss */
@import '../../../css/common.wxss';
.form{
  width:100%;
}
.detail {
  width: calc(100% - 60rpx);
  height: 485rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 6rpx 10rpx 0px rgba(71, 167, 254, 0.1);
  margin:20rpx 0 0 30rpx;
}
input{
  padding-left:12rpx;
}
input,textarea,picker{
  color:#333;
  font-size: 28rpx;
  background:#EBECF0;
  border-radius: 10rpx;
}
.picker{
  width:574rpx;
  height:44rpx;
  background:#EBECF0;
  padding:10rpx 0 0 10rpx;
  border-radius: 10rpx;
}
picker{
  margin-left:10rpx;
  min-height:60rpx;
}
.name{
  width:240rpx;
  height:60rpx;
  margin-left:10rpx;
}
.phone{
  display: flex;
  align-items: center;
  width:630rpx;
  border-bottom:1rpx solid #E6E6E6;
  margin:30rpx 0 0 30rpx;
  padding-bottom:26rpx;
}

.jt{
  float: right;
  margin:4rpx 20rpx 0 0;
}
.adInput{
  width:584rpx;
  height:66rpx;
  margin-left:10rpx;
  padding:12rpx;
  background:#EBECF0;
}
.intro{
  width:630rpx;
  color:#B3B3B3;
  font-size: 24rpx;
  margin:16rpx 0 0 30rpx;
}
.btnBc{
  width:calc(100% - 60rpx);
  height:80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin-top:40rpx;
  box-shadow:0px 6rpx 10rpx 0px rgba(71,167,254,0.1);
}
.cancel{
  margin-top:30rpx;
  background:#DCE1E6;
  color:#999;
  text-align: center;
}
.ad{
  position: relative;
  bottom:12rpx;
}