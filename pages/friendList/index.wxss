/* pages/friendList/index.wxss */
.friendList{
  width:calc(100% - 60rpx);
  height:auto;
  background:#fff;
  margin-top:20rpx;
  box-shadow:0px 6rpx 10rpx 0px rgba(71,167,254,0.1);
  border-radius: 10rpx;
}
.dialog{
  width:100%;
}

.dis{
  display: flex;
}

.round{
  width:24rpx;
  height:24rpx;
  border-radius: 50%;
  background:#FBE64D;
  margin-left:48rpx;
  z-index:10;
}
.xian{
  width:1rpx;
  height:58rpx;
  background:#EBECF5;
  margin-left:60rpx;
}
.intro{
  width:560rpx;
  border-bottom:1rpx solid #EBECF5;
  margin-left:30rpx;
}
.avatar{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  margin:30rpx 22rpx 20rpx 0;
}
.nickname{
  color:#333;
  font-size:32rpx;
  margin-top:10rpx;
  align-self: center;
}
.lastOne{
  border:none;
}
.noMore {
  text-align: center;
  font-size: 24rpx;
  margin: 20rpx 0 40rpx 0;
  color: #b3b3b3;
}

.line {
  display: inline-block;
  width: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 1rpx;
  vertical-align: 20%;
}

.none {
  padding: 0 20rpx;
}
