<!--pages/assistance/index.wxml-->
<view class='container'>
  <block wx:if='{{goods_help}}'>
    <view class='item' wx:for="{{goods_help}}" wx:key="{{index}}" data-index="{{index}}">
      <view class='disDia'>
        <view>
          <image src='{{item.photo}}' lazy-load='true' class='goods' data-id="{{item.id}}" catchtap='goOnedetail'></image>
        </view>
        <view>
          <view class='cor headTit'>{{item.title}}</view>
          <progress class='progress' stroke-width='2' activeColor='#47A7FE' percent='{{item.percent}}'></progress>
          <view class='disDia'>
            <view class='yuan two'></view>
            <block wx:if='{{item.state==0||item.state==1}}'>
              <view class='yuan two'> </view>
            </block>
            <block wx:else>
              <view class='yuan hui two'></view>
            </block>
            <block wx:if='{{item.state==1}}'>
              <view class='yuan'> </view>
            </block>
            <block wx:else>
              <view class='yuan hui'></view>
            </block>
          </view>
          <view class='disDia'>
            <view class='dian mgr'>发出邀请</view>
            <block wx:if='{{item.state==0}}'>
              <view class='dian mgr'>还差
                <text style='font-weight:bold;'>{{item.diff_num}}</text>位</view>
            </block>
            <block wx:elif="{{item.state==1}}">
              <view class='dian mgr'>人数已够</view>
            </block>
            <block wx:else>
              <view class='dian mgr' style='color:#b2b2b2'>邀请好友</view>
            </block>
            <view class='dian' style='{{item.state==1?"":"color:#b2b2b2;"}}'>免费领取</view>
          </view>
          <block wx:if='{{item.state==0||item.state==3}}'>
            <button open-type='share' plain='true' class='change cor size ' data-title='{{item.title}}' data-photo='{{item.share_img}}' data-id="{{item.id}}">邀请好友助力</button>
          </block>
          <block wx:else>
            <view class='change cor size ' data-id="{{item.id}}" bindtap='gotoDh'>立即兑换</view>
          </block>
        </view>
      </view>
    </view>
  </block>
  <block wx:else>
    <image src='../../imgs/nozl.png' class='nozl'></image>
    <view class='size start'>暂未发起任何助力，<text style='color:#47A7FE' catchtap='goMoreGooods'>立即发起</text></view>
  </block>
  <view class='dialog {{goods_help?"details":""}}'>
    <view class='noMore'>
      <span class="lines abs"></span>
      <text class='none abs'>好物推荐</text>
      <span class="lines abs linetwo"></span>
      <view class='dik abs'></view>
    </view>
    <view class='week' style='margin-top:100rpx;'>
      <block wx:for="{{goods}}" wx:key="{{index}}" data-index="{{index}}">
        <view class='wareDetail'>
          <image src='{{item.photo}}' lazy-load='true' class='goods' catchtap='goOnedetail' lazy-load='true' data-id="{{item.id}}"></image>
          <view class='size cor mf ellipsis'>{{item.title}}</view>
          <view class='dis kuan'>
            <view>
              <image src='../../imgs/rlbSm.png' class='rb relati' lazy-load='true'></image>
              <text class='price wenzi relati'>{{item.rlb_price}}</text>
            </view>
            <view class='yprice'>原价￥{{item.price}}</view>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>