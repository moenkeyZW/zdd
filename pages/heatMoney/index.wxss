/* pages/heatMoney/index.wxss */
@import '../../css/common.wxss';

.head {
  position: relative;
}

.dis {
  display: flex;
  align-items: center;
}

.current {
  width: 650rpx;
  justify-content: space-around;
  text-align: center;
  position: absolute;
  transform: translate(-50%, -50%);
  top: 50%;
  left: 50%;
}

.rlbBg {
  width: 690rpx;
  height: 240rpx;
}

.tit {
  color: #333;
  font-size: 28rpx;
}

.num {
  color: #333;
  font-size: 60rpx;
  font-weight: bold;
}

.xian {
  width: 2rpx;
  height: 120rpx;
  background: #333;
}

.flex {
  flex: 1;
}

.btnYq {
  width: 420rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  position: relative;
  bottom: 54rpx;
  margin-bottom: 30rpx;
  box-shadow:0px 6rpx 10rpx 0px rgba(71,167,254,0.1);
}

.date {
  width: 690rpx;
  margin-bottom: 30rpx;
}

.line {
  width: 6rpx;
  height: 24rpx;
  border-radius: 3rpx;
  background: #47a7fe;
}

.day {
  color: #47a7fe;
  font-size: 28rpx;
  padding-left: 12rpx;
}

.layout {
  width: 690rpx;
  height: auto;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 6rpx 10rpx 0px rgba(71, 167, 254, 0.1);
  margin-top: 22rpx;
}

.detail {
  width: 630rpx;
  margin-left: 30rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e8f0;
  padding: 26rpx 0;
}

.time {
  color: #b3b3b3;
  font-size: 28rpx;
}

.sum {
  font-size: 36rpx;
}

.foot{
  margin-bottom:40rpx;
}
.string {
  display: inline-block;
  width: 80rpx;
  height:2rpx;
  background:#ccc;
  border-radius: 1rpx;
  vertical-align: middle;
}
.noMore{
  font-size:24rpx;
  color:#B3B3B3;
  padding:0 20rpx;
}
.moneyBg{
  width:750rpx;
  height:260rpx;
  margin:20rpx 0 30rpx 0;
}
.yige{
  color:#999;
  font-size: 28rpx;
}
